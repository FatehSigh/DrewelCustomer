<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:layoutDirection="ltr"
    app:cardCornerRadius="0dp"
    cardview:cardElevation="@dimen/_5sdp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="wewe"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="Reply: "
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_title" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="4 June, 18"
            android:textColor="@color/violet_2"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@+id/txt_reply" />

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/_1sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginLeft="15dp"
            android:background="@color/violet_2"
            app:layout_constraintBottom_toBottomOf="@id/txt_date"
            app:layout_constraintStart_toEndOf="@id/txt_date"
            app:layout_constraintTop_toBottomOf="@+id/txt_reply" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_30sdp"
            android:paddingStart="@dimen/_8sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="4 June, 18"
            android:textColor="@color/violet_2"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toEndOf="@id/txt_date"
            app:layout_constraintTop_toBottomOf="@id/txt_reply" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_reply">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/txt_edit"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="#F3F3F3"
                    android:textColor="@color/colorPrimary"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="0.2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:padding="@dimen/_6sdp"
                    android:src="@mipmap/edit"
                    android:text="@string/edit"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />


            </RelativeLayout>

            <android.support.v7.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/txt_delete"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:src="@mipmap/delete"
                android:text="@string/delete"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>
