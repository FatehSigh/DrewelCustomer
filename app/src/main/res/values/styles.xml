<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <!-- <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
         <item name="windowActionBar">false</item>
         <item name="windowNoTitle">true</item>
         <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>
     </style>-->


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LoginEditTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="DeletetTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium_0</item>
    </style>

    <style name="ButtonTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="ProductTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightBlackTextColorStyle">
        <item name="android:textColor">@color/violet_1</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="OrangeTextColorStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BlackTextColorStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/buttonOrangeColor</item>
    </style>


    <style name="CircularProgressWhite" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="TextInputHint" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="RadioButtonTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/orange_1</item>
    </style>

    <style name="BoldBlackText10Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldBlackText12Style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="EditTextHint" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/lightblack</item>
        <item name="colorControlHighlight">@color/lightblack</item>
    </style>


    <style name="CheckOutActivityTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/violet_1</item>
        <item name="android:textColorHint">@color/violet_1</item>
        <item name="android:textColor">@color/violet_1</item>
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>
    <style name="DeliveryTypeTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orange_1</item>

    </style>

    <style name="BlackTextColorStyle_1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingStart">8dip</item>
        <item name="android:paddingEnd">8dip</item>
    </style>


    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/black</item>
    </style>
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <!--<item name="android:textAppearance">?android:textAppearanceMedium</item>-->
        <!--<item name="android:typeface">monospace</item>-->

        <!--<item name="android:fontFamily">@font/montserrat_regular</item>-->
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorRed</item>
    </style>
</resources>
